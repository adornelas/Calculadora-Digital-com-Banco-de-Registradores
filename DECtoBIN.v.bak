module DECtoBIN(
	input [3:0] entradaA,
	output [7:0] BINS, BIN0, BIN1, BIN2
);

always @ (entradaA[3])
	if (entradaA[3] == 0) BINS = 8'b00000000;
	else if (entradaA[3] == 1) BINS = 8'b10000000;

always @ (entradaA[0])
	if (entradaA[0] == 0) BIN0 = 8'b00000000;
	else if (entradaA[0] == 1) BIN0 = 8'b00000001;
	else if (entradaA[0] == 2) BIN0 = 8'b00000010;
	else if (entradaA[0] == 3) BIN0 = 8'b00000011;
	else if (entradaA[0] == 4) BIN0 = 8'b00000100;
	else if (entradaA[0] == 5) BIN0 = 8'b00000101;
	else if (entradaA[0] == 6) BIN0 = 8'b00000110;
	else if (entradaA[0] == 7) BIN0 = 8'b00000111;
	else if (entradaA[0] == 8) BIN0 = 8'b00001000;
	else if (entradaA[0] == 9) BIN0 = 8'b00001001;

always @ (entradaA[1])
	if (entradaA[1] == 0) BIN1 = 8'b00000000;
	else if (entradaA[1] == 1) BIN1 = 8'b00001010;
	else if (entradaA[1] == 2) BIN1 = 8'b00010100;
	else if (entradaA[1] == 3) BIN1 = 8'b00011110;
	else if (entradaA[1] == 4) BIN1 = 8'b00101000;
	else if (entradaA[1] == 5) BIN1 = 8'b00110010;
	else if (entradaA[1] == 6) BIN1 = 8'b00111100;
	else if (entradaA[1] == 7) BIN1 = 8'b01000110;
	else if (entradaA[1] == 8) BIN1 = 8'b01010000;
	else if (entradaA[1] == 9) BIN1 = 8'b01011010;

always @ (entradaA[2])
	if (entradaA[2] == 0) BIN2 = 8'b00000000;
	else if (entradaA[2] == 1) BIN2 = 8'b01100100;

endmodule